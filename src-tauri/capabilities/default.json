{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "shell:allow-open",
    "dialog:default",
    "updater:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.freecodecamp.org"
        },
        {
          "url": "https://*.freecodecamp.dev"
        },
        {
          "url": "http://localhost:*"
        }
      ]
    }
  ]
}